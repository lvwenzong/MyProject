
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script>
    function Save() {
        let name = $("#txrtName").val();
        let age = $("#txrtAge").val();
        let address = $("#txrtAddress").val();

        let paramObj = {};
        paramObj.Name = name;
        paramObj.Age = age;
        paramObj.Address = address;

        //$.post("/Test/SaveInfo", paramObj, function (data) {
        //    if (data.msg != undefined && data.msg != null && data.msg != "") {
        //        alert(data.msg);
        //    }
        //}, "json");

        $.ajax({
            type: "post",
            url: "/Test/SaveInfo",
            data: paramObj,
            dataType: "json",
            success: function (data) {
                if (data) {
                    alert(data.msg);
                }
            }
        });
    }

</script>
<div class="container">
    <form class="form-horizontal" method="post" action="@Url.Action("SaveInfo","Test")">
        <div class="form-group">
            <label for="" class="control-label col-md-2">用户名：</label>
            <div class="col-md-10">
                <input type="text" id="txrtName" class="form-control" name="Name" />
            </div>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-md-2">年龄：</label>
            <div class="col-md-10">
                <input type="text" id="txrtAge" class="form-control" name="Age" />
            </div>
        </div>
        <div class="form-group">
            <label for="" class="control-label col-md-2">地址：</label>
            <div class="col-md-10">
                <input type="text" id="txrtAddress" class="form-control" name="Address" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>


